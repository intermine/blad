<div class="six columns">
    <label>Unique identifier</label>
    <input type="text" placeholder="document-name" name="name" value="<%= @name %>">
</div>

<div class="six columns">
    <label>URL</label>
    <input type="text" placeholder="/" name="url" value="<%= @url %>">
</div>

<div class="twelve columns">
    <label>Markdown text</label>
    <textarea name="markup"><%= @markup %></textarea>
</div>
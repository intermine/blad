article.callout
    margin-top: 20px
    margin-bottom: 30px

    h1
        font-family: "Lato"
        color: #FFF
        font-weight: 400
        font-size: 18px
        padding: 12px 10px

    h2, h3
        font-size: 12px
        font-weight: 800
        line-height: 18px

    h3
        font-weight: 400

    h4
        color: #7c7c7c
        font-weight: 400
        font-size: 13px
        padding: 5px 10px

    a
        color: #7d4166
        text-decoration: underline

    ul
        list-style-type: none
        margin: 10px

        &.scrollbar
            overflow-y: auto
            overflow-x: hidden
            height: 200px
            margin-right: 0

            li
                margin-right: 5px

        li
            &:not(:first-child):before

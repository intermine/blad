<!doctype html>
<head>
    <meta charset="utf-8" />

    <title>Micklem Lab | University of Cambridge</title>

    <link rel="stylesheet" href="/public/css/foundation3.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <!-- head menu -->
    <header id="top">
        <div class="row">
            <h1>Micklem Lab</h1>
            <h2><a target="_blank" href="http://www.cam.ac.uk/">University <span>of</span> Cambridge</a></h2>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/projects">Projects</a></li>
                    <li><a href="/resources">Resources</a></li>
                    <li><a href="/publications">Publications</a></li>
                    <li class="active"><a href="/news">News</a></li>
                    <li><a class="people" href="/people">People</a></li>
                </ul>
                <a class="contact" href="/contact">Contact</a>
            </nav>
        </div>
    </header>

    <!-- callout hero banner -->
    <div class="row">
        <div id="splash" class="twelve columns">
            <img src="/public/img/splashes/dna.jpg" />
            <h1>News Archive</h1>
            <h2>Old articles</h2>
        </div>
    </div>

    <div class="row shakespeare">
        <aside class="sidebar three columns">
            <h2 class="primary">Archive news</h2>
            <nav>
                <ul>
                    <% for article in @articles: %>
                        <li>
                            <h3><a href="<%= article.url %>"><%= article.title %></a></h3>
                            <p><%= article.published %></p>
                        </li>
                    <% end %>
                </ul>
            </nav>
        </aside>

        <!-- main content -->
        <article class="main nine columns">
            <h1>Archive news articles</h1>

            <% for article in @articles: %>
                <div class="twelve columns article">
                    <h2><%= article.title %></h2>
                    <h4><%= article.published %></h4>
                    <%- article.body %>
                </div>
            <% end %>
        </article>
    </div>

    <!-- footer links -->
    <footer class="row">
        <div class="twelve columns">
            <ul>
                <li>
                    <a target="_blank" href="http://www.cam.ac.uk/"><img src="/public/img/logo-cam.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.gen.cam.ac.uk/"><img src="/public/img/logo-genetics.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.sysbiol.cam.ac.uk/"><img src="/public/img/logo-csbc.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.ccbi.cam.ac.uk/"><img src="/public/img/logo-ccbi.png" /></a>
                </li>
            </ul>
        </div>
    </footer>
</body>
</html>
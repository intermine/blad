<!doctype html>
<head>
    <meta charset="utf-8" />

    <title>Micklem Lab | University of Cambridge</title>

    <link rel="stylesheet" href="/public/css/foundation3.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <!-- head menu -->
    <header id="top">
        <div class="row">
            <h1>Micklem Lab</h1>
            <h2>University <span>of</span> Cambridge</h2>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/projects">Projects</a></li>
                    <li><a href="/resources">Resources</a></li>
                    <li><a href="/publications">Publications</a></li>
                    <li><a href="/news">News</a></li>
                    <li class="active"><a class="people" href="/people">People</a></li>
                </ul>
                <a class="contact" href="/contact">Contact</a>
            </nav>
        </div>
    </header>

    <!-- callout hero banner -->
    <div class="row">
        <div id="splash" class="twelve columns">
            <img src="/public/img/splashes/apparatus-alt.jpg" />
            <h1>People</h1>
            <h2>Group members</h2>
        </div>
    </div>

    <div class="row bismark">
        <aside class="sidebar three columns">
            <h2 class="primary">Other member pages</h2>
            <nav>
                <ul>
                    <% for person in @people when person.public: %>
                        <li>
                            <% if person.public: %>
                                <h3><a href="<%= person.url %>"><%= person.name %></a></h3>
                            <% else: %>
                                <h3><%= person.name %></h3>
                            <% end %>
                            <p><%= person.position %></p>
                        </li>
                    <% end %>
                </ul>
            </nav>
        </aside>

        <!-- main content -->
        <article class="main nine columns">
            <h1><%= @name %></h1>
            <h2><%= @position %></h2>

            <% if @image: %>
                <div class="row">
                    <div class="nine columns">
                        <%- @body %>
                    </div>
                    <div class="three columns">
                        <img src="<%- @image %>" />
                    </div>
                </div>
            <% else: %>
                <%- @body %>
            <% end %>

            <% if @interests: %>
                <h2>Research interests</h2>
                <p><%- @interests %></p>
            <% end %>

            <% if @pubTitle0: %>
                <h2>Selected publications</h2>

                <table>
                    <tbody>
                    <% for i in [0...3]: %>
                        <% if @["pubTitle#{i}"]: %>
                        <tr>
                            <td><a target="_blank" href="<%= @["pubURL#{i}"] %>"><%= @["pubTitle#{i}"] %></a></td>
                            <td style="white-space:nowrap"><%= @["pubDate#{i}"] %></td>
                            <td><%= @["pubJournal#{i}"] %></td>
                            <td>
                                <% if @["pubAuthors#{i}"].split(', ').length > 5: %>
                                    <% for j in [0...4]: %>
                                        <span class="author"><%= @["pubAuthors#{i}"].split(', ')[j] %></span>
                                    <% end %>
                                    &hellip;
                                    <span class="author"><%= @["pubAuthors#{i}"].split(', ').pop() %></span>
                                <% else: %>
                                    <% for author in @["pubAuthors#{i}"].split(', '): %>
                                        <span class="author"><%= author %></span>
                                    <% end %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    <% end %>
                    </tbody>
                </table>
            <% end %>
        </article>
    </div>

    <!-- footer links -->
    <footer class="row">
        <div class="twelve columns">
            <ul>
                <li>
                    <a target="_blank" href="http://www.cam.ac.uk/"><img src="/public/img/logo-cam.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.gen.cam.ac.uk/"><img src="/public/img/logo-genetics.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.sysbiol.cam.ac.uk/"><img src="/public/img/logo-csbc.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.ccbi.cam.ac.uk/"><img src="/public/img/logo-ccbi.png" /></a>
                </li>
            </ul>
        </div>
    </footer>
</body>
</html>
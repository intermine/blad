<!doctype html>
<head>
    <meta charset="utf-8" />

    <title>Micklem Lab | University of Cambridge</title>

    <link rel="stylesheet" href="/public/css/foundation3.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <!-- head menu -->
    <header id="top">
        <div class="row">
            <h1>Micklem Lab</h1>
            <h2>University <span>of</span> Cambridge</h2>
            <nav>
                <ul>
                    <li><a href="/">Intro</a></li>
                    <li><a href="/projects">Projects</a></li>
                    <li><a href="/resources">Resources</a></li>
                    <li class="active"><a href="/publications">Publications</a></li>
                    <li><a href="/news">News</a></li>
                    <li><a class="people" href="/people">People</a></li>
                </ul>
                <a class="contact" href="/contacts">Contact team</a>
            </nav>
        </div>
    </header>

    <!-- callout hero banner -->
    <div class="row">
        <div id="splash" class="twelve columns">
            <img src="/public/img/splash-server.jpg" />
            <h1>Publications</h1>
            <h2>Fetched from PubMed</h2>
        </div>
    </div>

    <div class="row">
        <!-- main content -->
        <article class="main twelve columns">
            <h1><%= @title %></h1>

            <table>
                <tbody>
                <% for publication in @publications: %>
                    <tr>
                        <td><a target="_blank" href="http://www.ncbi.nlm.nih.gov/pubmed/<%= publication.Id %>"><%= publication.Title %></a></td>
                        <td style="white-space:nowrap"><%= publication.PubDate %></td>
                        <td><%= publication.FullJournalName %></td>
                        <td>
                            <% if publication.Authors.length > 5: %>
                                <% for i in [0...4]: %>
                                    <span class="author"><%= publication.Authors[i] %></span>
                                <% end %>
                                &hellip;
                                <span class="author"><%= publication.Authors.pop() %></span>
                            <% else: %>
                                <% for author in publication.Authors: %>
                                    <span class="author"><%= author %></span>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </article>
    </div>

    <!-- footer links -->
    <footer class="row">
        <div class="twelve columns">
            <ul>
                <li>
                    <a target="_blank" href="http://www.cam.ac.uk/"><img src="/public/img/logo-cam.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.gen.cam.ac.uk/"><img src="/public/img/logo-genetics.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.sysbiol.cam.ac.uk/"><img src="/public/img/logo-csbc.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.ccbi.cam.ac.uk/"><img src="/public/img/logo-ccbi.png" /></a>
                </li>
            </ul>
        </div>
    </footer>
</body>
</html>
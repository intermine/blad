<!doctype html>
<head>
    <meta charset="utf-8" />

    <title>Micklem Lab | University of Cambridge</title>

    <link rel="stylesheet" href="/public/css/foundation3.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <!-- head menu -->
    <header id="top">
        <div class="row">
            <h1>Micklem Lab</h1>
            <h2><a target="_blank" href="http://www.cam.ac.uk/">University <span>of</span> Cambridge</a></h2>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/projects">Projects</a></li>
                    <li class="active"><a href="/resources">Resources</a></li>
                    <li><a href="/publications">Publications</a></li>
                    <li><a href="/news">News</a></li>
                    <li><a class="people" href="/people">People</a></li>
                </ul>
                <a class="contact" href="/contact">Contact</a>
            </nav>
        </div>
    </header>

    <!-- callout hero banner -->
    <div class="row">
        <div id="splash" class="twelve columns dark">
            <img src="/public/img/splashes/gos-coffee.jpg" />
            <h1>Resources</h1>
        </div>
    </div>

    <div class="row patina">
        <!-- main content -->
        <article class="main twelve columns">
            <% if @resources.length isnt 0: %>
                <table>
                    <tbody>
                        <% for resource in @resources: %>
                            <tr>
                                <td>
                                    <a target="_blank" href="<%= resource.link %>">
                                        <img src="<%- resource.image  %>" title="<%= resource.title %> logo" />
                                    </a>
                                </td>
                                <td>
                                    <a target="_blank" href="<%= resource.link %>"><%= resource.title %></a>
                                    <%- resource.summary %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </article>
    </div>

    <!-- footer links -->
    <footer class="row">
        <div class="twelve columns">
            <ul>
                <li>
                    <a target="_blank" href="http://www.cam.ac.uk/"><img src="/public/img/logo-cam.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.gen.cam.ac.uk/"><img src="/public/img/logo-genetics.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.sysbiol.cam.ac.uk/"><img src="/public/img/logo-csbc.png" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.ccbi.cam.ac.uk/"><img src="/public/img/logo-ccbi.png" /></a>
                </li>
            </ul>
        </div>
    </footer>

    <!-- footer funding -->
    <footer class="row">
        <div class="twelve columns">
            <p>Work at Micklem Lab is funded by:</p>
            <ul>
                <li>
                    <a target="_blank" href="http://www.epsrc.ac.uk/"><img src="/public/img/grants-color/epsrc.jpg" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.kaust.edu.sa/"><img src="/public/img/grants-color/kaust.jpg" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.genome.gov/"><img src="/public/img/grants-color/nhgri.jpg" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.nih.gov/"><img src="/public/img/grants-color/nih.jpg" /></a>
                </li>
                <li>
                    <a target="_blank" href="http://www.wellcome.ac.uk/"><img src="/public/img/grants-color/wellcome.jpg" /></a>
                </li>
            </ul>
            <p>&copy; 2012, Micklem Lab</p>
        </div>
    </footer>
</body>
</html>